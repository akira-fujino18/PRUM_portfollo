<%= provide(:title, 'スキルを追加') %>

<div class = "login_form">
  
  <h1><%= @category.category_name %>にスキルを追加</h1>
  
  <%= form_with(model: @skill, url: skills_path, local: true) do |f| %>
    
    <%= f.label :skill_name, '習得スキル名' %>
    <%= f.text_field :skill_name, class: 'form_design' %>
    
    <%= f.label :level, '習得レベル'%>
    <%= f.number_field :level, class: 'form_design' %>
    
  <p class = "limit">0 ~ 100 の間で選択してください</p>
  
  </div> 
  <%= f.hidden_field :category_id, value: @category.id %>
  <%= f.hidden_field :current_user, value: current_user.id %>
    <%= f.submit '追加する', class: 'loginning btn' %>
    
    <% end %>
   
